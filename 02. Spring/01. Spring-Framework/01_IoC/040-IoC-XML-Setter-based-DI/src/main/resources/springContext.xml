<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
    <bean id="messageProvider" 
        class="com.oleg.belov.spring_framework.ioc.constructor.based.di.ConfigurableMessageProvider"
        p:message="This is a configurable message"/>

    <bean id="constructorConfusion"
        class="com.oleg.belov.spring_framework.ioc.constructor.based.di.ConstructorConfusion"
        p:someValue="90"> 
    </bean>
</beans>
