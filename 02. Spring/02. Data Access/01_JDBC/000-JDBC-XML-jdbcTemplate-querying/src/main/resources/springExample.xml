<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- <context:component-scan base-package="com.oleg.belov.spring.dao.jdbc" /> -->
	<context:annotation-config/>
	
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${jdbc.driverClassName}"/>
		<property name="url" value="${jdbc.url}"/>
		<property name="username" value="${jdbc.username}"/>
		<property name="password" value="${jdbc.password}"/>
	</bean>
	
	<bean id="bookService" class="com.oleg.belov.spring.dao.jdbc.service.BookService">
		<property name="bookRepository">
			<ref bean="bookRepository"/>
		</property>
	</bean>
	<bean id="bookRepository" class="com.oleg.belov.spring.dao.jdbc.repository.BookRepository" />
	
	<context:property-placeholder location="jdbc.properties"/>
</beans>